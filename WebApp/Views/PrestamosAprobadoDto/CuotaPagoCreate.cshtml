@model WebApp.Dtos.PagoDto

@{
    ViewData["Title"] = "Nuevo Pago Cuota";
}

<h1>Nuevo</h1>

<h4>Pago Cuota</h4>

<hr />

<div class="col-md-12">
    <form asp-action="CuotaPagoCreate">
        <div class="btn-group" role="group" aria-label="Agrupar Botones">
            <a asp-action="CuotaPagosIndex" class="btn btn-secondary" asp-route-id="@Model.CuotaId">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PrestamoAprobadoId" />
        <input type="hidden" asp-for="CuotaId" />
        <input type="hidden" asp-for="PersonaId" />

        <div class="form-group">
            <label asp-for="MontoMinimoPago" class="control-label"></label>
            <input asp-for="MontoMinimoPago" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="MontoPago" class="control-label"></label>
            <input asp-for="MontoPago" class="form-control" />
            <span asp-validation-for="MontoPago" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MontoMaximoPago" class="control-label"></label>
            <input asp-for="MontoMaximoPago" class="form-control" readonly />
        </div>
        @*<div class="form-group">
            <label asp-for="PersonaId" class="control-label"></label>
            <select asp-for="PersonaId" class="form-control" asp-items="ViewBag.PersonaId"></select>
        </div>*@
        <div class="form-group">
            <label asp-for="FormaPagoId" class="control-label"></label>
            <select asp-for="FormaPagoId" class="form-control" asp-items="ViewBag.FormaPagoId"></select>
        </div>

    </form>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
