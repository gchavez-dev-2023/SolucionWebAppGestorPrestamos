@model IEnumerable<WebApp.Models.SolicitudPrestamo>

@{
    ViewData["Title"] = "Lista de Solicitud Prestamos";
}

<h1>Lista de Solicitud Prestamos</h1>

<p>
    <a asp-action="CreateStep1" class="btn btn-success text-white">Nueva Solicitud</a>
</p>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Persona.CedulaIdentidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoSolicitado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadCuotas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorCuota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoTotalFinanciero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSolicitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Persona.CedulaIdentidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoSolicitado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadCuotas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorCuota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostoTotalFinanciero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaSolicitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Agrupar Botones">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalle</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
