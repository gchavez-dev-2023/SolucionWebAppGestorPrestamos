                <label asp-for="MontoLiquidoPercibido" class="control-label"></label>
                <input asp-for="MontoLiquidoPercibido" class="form-control" />
                <span asp-validation-for="MontoLiquidoPercibido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Scoring" class="control-label"></label>
                <input asp-for="Scoring" class="form-control" />
                <span asp-validation-for="Scoring" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        var divConyuge = document.getElementById("EstadoCivilId");
        divConyuge.addEventListener("change",Refresh);
        Refresh();
        //Funcion Estado Civil
        function Refresh() {
            $.ajax({
                type: "POST",
                url: "/Validator/RequiereDatosConyuge",
                dataType: 'json',
                data: { "estadoCivilId": $("#EstadoCivilId").val() },
                success: function (response) {
                    if (response.requiereDatosConyuge) {
                        $('.conyuge-form').show();
                    }
                    else {
                        $('.conyuge-form').hide();
                    }
                },
                failure: function (response) {
                    alert("failure " + response.responseText);
                },
                error: function (response) {
                    alert("error " + response.responseText);
                }
            });
        }
    </script>
}
