            </div>
            <div class="form-group">
                <label asp-for="EstadoCivilId" class="control-label"></label>
                <select asp-for="EstadoCivilId" class="form-control" asp-items="ViewBag.EstadoCivilId"></select>
            </div>
            <div class="col-md-6 conyuge-form" style="display: none">
                <input type="hidden" asp-for="ConyugeId" />
                <input type="hidden" asp-for="ConyugePersonaId" />
                <div class="form-group">
                    <label asp-for="ConyugeCedulaIdentidad" class="control-label"></label>
                    <input asp-for="ConyugeCedulaIdentidad" class="form-control" />
                    <span asp-validation-for="ConyugeCedulaIdentidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConyugeNombre" class="control-label"></label>
                    <input asp-for="ConyugeNombre" class="form-control" />
                    <span asp-validation-for="ConyugeNombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConyugeApellido" class="control-label"></label>
                    <input asp-for="ConyugeApellido" class="form-control" />
                    <span asp-validation-for="ConyugeApellido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConyugeFechaNacimiento" class="control-label"></label>
                    <input asp-for="ConyugeFechaNacimiento" class="form-control" />
                    <span asp-validation-for="ConyugeFechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConyugeGeneroId" class="control-label"></label>
                    <select asp-for="ConyugeGeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ConyugeDomicilio" class="control-label"></label>
                    <input asp-for="ConyugeDomicilio" class="form-control" />
                    <span asp-validation-for="ConyugeDomicilio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConyugeCorreoElectronico" class="control-label"></label>
                    <input asp-for="ConyugeCorreoElectronico" class="form-control" />
                    <span asp-validation-for="ConyugeCorreoElectronico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConyugeTelefono" class="control-label"></label>
                    <input asp-for="ConyugeTelefono" class="form-control" />
                    <span asp-validation-for="ConyugeTelefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConyugeNacionalidadId" class="control-label"></label>
                    <select asp-for="ConyugeNacionalidadId" class="form-control" asp-items="ViewBag.NacionalidadId"></select>
                </div>
            </div>
            <input type="hidden" asp-for="OrigenIngresoId" />
            <div class="form-group">
                <label asp-for="TipoActividadId" class="control-label"></label>
                <select asp-for="TipoActividadId" class="form-control" asp-items="ViewBag.TipoActividadId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicioActividad" class="control-label"></label>
                <input asp-for="FechaInicioActividad" class="form-control" />
                <span asp-validation-for="FechaInicioActividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinActividad" class="control-label"></label>
