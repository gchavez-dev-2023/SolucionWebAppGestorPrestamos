@model IEnumerable<WebApp.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>Lista de Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-success text-white" >Nuevo Cliente</a>
</p>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persona.CedulaIdentidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoCivilId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scoring)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persona.DatosVerificados)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.CedulaIdentidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoCivil.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Scoring)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Persona.DatosVerificados)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Agrupar Botones">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalle</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
